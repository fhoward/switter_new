.ui.top.inverted.orange.tree.menu
  %a.item{:href => "#"}
    %strong Switter
    - unless user_signed_in?
      .right.menu
        = link_to  sign_up_path ,class: "item" do
          %i.signup.icon
          Sign Up
        = link_to  sign_in_path, class: "item" do
          %i.sign.in.icon
          Login
    - else
      = link_to "Home", home_path, class: "active blue item"
      .right.menu
      = link_to  edit_user_registration_path , class: "item" do
        %i.settings.icon
        Settings
      = link_to  destroy_user_session_path ,method: :delete, data: {confirm: "Are you sure?"}, class: "item" do
        %i.sign.out.icon
        Logout
