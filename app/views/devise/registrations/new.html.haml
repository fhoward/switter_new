.ui.relaxed.equal.width.grid
  .ui.row
    .ui.four.wide.column
    .ui.eight.wide.column.segment
      %h2.ui.center.aligned.dividing.header
        %i.signup.icon>
        Sign up
      %div{:class => "ui form #{"error" if resource.errors.any?}"}
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .ui.error.message
            = devise_error_messages!
          .field
            = f.label :first_name
            = f.text_field :first_name, autofocus: true ,placeholder: "First Name"
          .field
            = f.label :last_name
            = f.text_field :last_name, autofocus: true ,placeholder: "Last Name"
          .field
            = f.label :username
            = f.text_field :username, autofocus: true ,placeholder: "User Name"
          .field
            = f.label :email
            = f.email_field :email, autofocus: false ,placeholder: "john@example.com"
          .field
            = f.label :password
            - if @minimum_password_length
              .ui.pointing.below.label
                = @minimum_password_length
                characters minimum
            / <div  data-tooltip = "Add users to your feed">
            = f.password_field :password, autocomplete: "off" ,placeholder: "Enter Password" ,data: {toggle: "tooltip", placement: "left" }
            / </div>
          .field
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: "off" ,placeholder: "Confirm Password"
          .ui.left.icon.input
            = f.submit "Sign up" ,class: "ui submit button primary "
            %i.users.icon
        .ui.horizontal.divider or
        .ui.celled.horizontal.list
          = render "devise/shared/links"
