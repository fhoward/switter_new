.ui.relaxed.equal.width.grid
  .ui.row
    .ui.four.wide.column
    .ui.eight.wide.column.segment
      %h2.ui.center.aligned.dividing.header
        %i.unlock.icon>
        Change your password
      %div{:class => "ui form #{"error" if resource.errors.any?}"}
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          .ui.error.message
            = devise_error_messages!
          = f.hidden_field :reset_password_token
          .field
            = f.label :password, "New password"
            - if @minimum_password_length
              .ui.pointing.below.label
                = @minimum_password_length
                characters minimum
            = f.password_field :password, autofocus: true, autocomplete: "off" , placeholder: "Enter new password"
          .field
            = f.label :password_confirmation, "Confirm new password"
            = f.password_field :password_confirmation, autocomplete: "off" , placeholder: "Confirm new password"
          .actions
            = f.submit "Change my password",class: "ui submit button primary "
        .ui.horizontal.divider or
        .ui.celled.horizontal.list
          = render "devise/shared/links"
